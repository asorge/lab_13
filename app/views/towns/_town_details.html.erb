<div id="town-details">
    <h2><%= @town.name %></h2>
    <hr />
    <p>
      <strong>State:</strong>
      <%= @town.state %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @town.description %>
    </p>
    <% unless @attractions.empty? %>
      <p><b>Attractions in <%= @town.name %>:</b>
        <ol>
          <% for attraction in @attractions %>
            <li><%= attraction.name %> - <%= attraction.street %></li>
          <% end %>
        </ol>
      </p>
    <% end %>
</div>