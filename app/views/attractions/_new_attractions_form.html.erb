<%= simple_form_for @attraction, html: { :class => 'form-horizontal' }, remote: true do |f| %>
  <%= f.input :name, label: "Name", input_html: {class: "avg"} %>
  <%= f.input :street, label: "Street", input_html: {:class => "avg"} %>

  <!-- Note in this case that can't use @town; use params[:town_id] -->
  <%= f.input :town_id, as: :hidden, input_html: { value: params[:town_id] } %>

  <p>&nbsp;</p>
  <div class="form-actions">
    <%= f.submit nil, class: 'button tiny radius' %>
    <%= link_to 'Cancel', town_path(params[:town_id]), class: 'button tiny radius alert' %>
  </div>
<% end %>